---
import BaseLayout from "../layouts/BaseLayout.astro";
import { EMAIL_ADDRESS, LOCATIONS, PHONE_NUMBER } from "../data/consts";
import HeroGeneralPages from "../components/HeroGeneralPages.astro";
import FinalCTASection from "../components/FinalCTASection.astro";
import MaintenancePhilosophy from "../components/Fleet/MaintenancePhilosophy.astro";

const CONTACT_FORM_WEBHOOK_URL = import.meta.env.CONTACT_FORM_WEBHOOK_URL;
const PORTAL_API_KEY = import.meta.env.PORTAL_API_KEY;
const CP_ACCOUNT_RANDOM_ID = import.meta.env.CP_ACCOUNT_RANDOM_ID;

// Dynamic Subject Options
const subjectTopics = [
  { value: "General Inquiry", label: "General Inquiry" },
  { value: "Flight Training", label: "Flight Training Programs" },
  { value: "Discovery Flight", label: "Book a Discovery Flight" },
  { value: "Maintenance", label: "Maintenance & Repair (Part 145)" },
  { value: "Aircraft Management", label: "Aircraft Management & Acquisition" },
  { value: "FBO Services", label: "FBO & Fueling Services" },
  { value: "Financing", label: "Financing Options" },
  { value: "Other", label: "Other" },
];

const heroData = {
  images: [
    {
      src: "/src/assets/facilities/mh-aviation-facilities-front-sd.webp",
      alt: "MH Aviation main facility at Fox Field",
      imageCentering: "object-center"
    }
  ],
  title: "Contact Us",
  subTitle: "Whether you are ready to fly, need maintenance, or just have a question, our family-owned team is here to help.",
};

const finalCtaData = {
  eyebrow: "Want To Enroll already?",
  headline: "Enroll With Us Now",
  bodyCopy: "If you'd prefer to start with your enrollment already, click the button bellow",
  cta: {
    text: "Enroll Now",
    href: "/enroll",
    subtext: `Or call us at ${PHONE_NUMBER}`,
  },
  image: {
    src: "/src/assets/facilities/mh-aviation-facilities-front.jpg",
    alt: "MH Aviation Facility",
  },
};

const metaProps = {
  siteTitle: "Contact Us | MH Aviation",
  siteDescription: "Contact MH Aviation at Fox Field (KWJF). Schedule flight training, maintenance, or FBO services in Lancaster, CA.",
  siteKeywords: "Contact MH Aviation, Fox Field Phone Number, Flight Training Lancaster, Maintenance Appointment"
};
---

<BaseLayout {...metaProps}>
  <HeroGeneralPages data={heroData} />

  <section class="py-20 md:py-28 bg-ink-50">
    <div class="max-w-7xl mx-auto px-5 md:px-8 lg:px-12">
      <div class="grid lg:grid-cols-2 gap-16">
        
        <div class="bg-white p-8 md:p-12 rounded-sm shadow-xl border-t-4 border-ochre-600">
          <h2 class="text-3xl !font-main-header text-ink-950 uppercase tracking-wide mb-6">
            Send Us a Message
          </h2>
          <p class="text-lg text-ink-600 mb-8 leading-relaxed border-b border-ink-100 pb-8">
            Fill out the form below and our team will get back to you within 24 hours.
          </p>

          <form id="contactForm" class="space-y-6">
            <div class="hidden" aria-hidden="true">
              <label for="website">Website</label>
              <input type="text" id="website" name="website" tabindex="-1" autocomplete="off" />
            </div>

            <div>
              <label for="name" class="block text-xs font-bold uppercase tracking-widest text-ink-500 mb-2">
                Full Name <span class="text-ochre-600">*</span>
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-4 bg-ink-50 border border-ink-200 rounded-sm focus:ring-1 focus:ring-ochre-600 focus:border-ochre-600 outline-none transition-colors text-ink-900 placeholder-ink-400"
                placeholder="John Doe"
              />
            </div>

            <div>
              <label for="email" class="block text-xs font-bold uppercase tracking-widest text-ink-500 mb-2">
                Email Address <span class="text-ochre-600">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-4 bg-ink-50 border border-ink-200 rounded-sm focus:ring-1 focus:ring-ochre-600 focus:border-ochre-600 outline-none transition-colors text-ink-900 placeholder-ink-400"
                placeholder="john@example.com"
              />
            </div>

            <div>
              <label for="phone" class="block text-xs font-bold uppercase tracking-widest text-ink-500 mb-2">
                Phone Number
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-4 bg-ink-50 border border-ink-200 rounded-sm focus:ring-1 focus:ring-ochre-600 focus:border-ochre-600 outline-none transition-colors text-ink-900 placeholder-ink-400"
                placeholder="(661) 123-4567"
              />
            </div>

            <div>
              <label for="subject" class="block text-xs font-bold uppercase tracking-widest text-ink-500 mb-2">
                Subject <span class="text-ochre-600">*</span>
              </label>
              <select
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-4 bg-ink-50 border border-ink-200 rounded-sm focus:ring-1 focus:ring-ochre-600 focus:border-ochre-600 outline-none transition-colors text-ink-900"
              >
                <option value="">Select a topic...</option>
                {subjectTopics.map((topic) => (
                  <option value={topic.value}>{topic.label}</option>
                ))}
              </select>
            </div>

            <div>
              <label for="message" class="block text-xs font-bold uppercase tracking-widest text-ink-500 mb-2">
                Message <span class="text-ochre-600">*</span>
              </label>
              <textarea
                id="message"
                name="message"
                required
                rows="5"
                class="w-full px-4 py-3 bg-ink-50 border border-ink-200 rounded-sm focus:ring-1 focus:ring-ochre-600 focus:border-ochre-600 outline-none transition-colors text-ink-900 resize-none placeholder-ink-400"
                placeholder="How can we help you today?"></textarea>
            </div>

            <div class="flex gap-x-4 items-start">
              <div class="flex h-6 items-center">
                <button
                  type="button"
                  id="terms-toggle"
                  class="bg-ink-200 flex w-11 flex-none cursor-pointer rounded-full p-px ring-1 ring-inset ring-ink-900/5 transition-colors duration-200 ease-in-out focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-ochre-600"
                  role="switch"
                  aria-checked="false"
                >
                  <span class="sr-only">Agree to terms</span>
                  <span
                    id="terms-thumb"
                    class="translate-x-0 h-5 w-5 transform rounded-full bg-white shadow-sm ring-1 ring-ink-900/5 transition duration-200 ease-in-out"
                    aria-hidden="true"></span>
                </button>
                <input type="hidden" id="agree-terms" name="agree-terms" value="no" />
              </div>
              <label class="text-sm leading-6 text-ink-600" id="switch-1-label">
                I agree to the <a href="/privacy-policy" class="font-bold text-ochre-600 hover:text-ochre-700 underline">Privacy Policy</a> and <a href="/terms-of-service" class="font-bold text-ochre-600 hover:text-ochre-700 underline">Terms of Service</a>. By providing my phone number, I agree to receive text messages from MH Aviation.
              </label>
            </div>

            <div>
              <button
                type="submit"
                id="submit-btn"
                disabled
                class="w-full bg-ink-300 cursor-not-allowed text-white px-8 py-4 rounded-sm font-bold uppercase tracking-widest text-sm transition-all shadow-lg flex items-center justify-center border border-transparent"
              >
                <span id="buttonText">Send Message</span>
                <svg
                  id="buttonSpinner"
                  class="hidden animate-spin ml-3 h-5 w-5 text-white"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                >
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
              </button>
            </div>

            <div id="successMessage" class="hidden bg-green-50 border-l-4 border-green-500 p-4 rounded-r-sm">
              <div class="flex items-start">
                <div class="ml-3">
                  <h3 class="text-green-800 font-bold text-sm uppercase tracking-wide">Message Sent</h3>
                  <p class="text-green-700 text-sm mt-1">Redirecting you to confirmation page...</p>
                </div>
              </div>
            </div>

            <div id="errorMessage" class="hidden bg-red-50 border-l-4 border-red-500 p-4 rounded-r-sm">
              <div class="flex items-start">
                <div class="ml-3">
                  <h3 class="text-red-800 font-bold text-sm uppercase tracking-wide">Error</h3>
                  <p class="text-red-700 text-sm mt-1" id="errorText">Something went wrong. Please try again.</p>
                </div>
              </div>
            </div>
          </form>
        </div>

        <div class="flex flex-col justify-between">
          <div>
            <h2 class="text-3xl !font-main-header text-ink-950 uppercase tracking-wide mb-8">
              Contact Information
            </h2>

            <div class="space-y-8 mb-12">
              <div class="flex items-start group">
                <div class="w-14 h-14 bg-ink-950 rounded-sm flex items-center justify-center shrink-0 mr-6 shadow-lg group-hover:bg-ochre-600 transition-colors duration-300">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-bold text-ink-950 uppercase tracking-widest text-sm mb-1">Phone</h3>
                  <a href={`tel:${PHONE_NUMBER}`} class="text-ochre-600 hover:text-ochre-700 text-xl font-medium block mb-1">
                    {PHONE_NUMBER}
                  </a>
                  <p class="text-sm text-ink-500">Mon - Fri: 8:00 AM - 5:00 PM</p>
                </div>
              </div>

              <div class="flex items-start group">
                <div class="w-14 h-14 bg-ink-950 rounded-sm flex items-center justify-center shrink-0 mr-6 shadow-lg group-hover:bg-ochre-600 transition-colors duration-300">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-bold text-ink-950 uppercase tracking-widest text-sm mb-1">Email</h3>
                  <a href={`mailto:${EMAIL_ADDRESS}`} class="text-ochre-600 hover:text-ochre-700 text-xl font-medium block mb-1">
                    {EMAIL_ADDRESS}
                  </a>
                  <p class="text-sm text-ink-500">We respond within 24 hours</p>
                </div>
              </div>

              <div class="flex items-start group">
                <div class="w-14 h-14 bg-ink-950 rounded-sm flex items-center justify-center shrink-0 mr-6 shadow-lg group-hover:bg-ochre-600 transition-colors duration-300">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-bold text-ink-950 uppercase tracking-widest text-sm mb-1">Location</h3>
                  <address class="text-ink-600 not-italic text-lg">
                    {LOCATIONS[0].address}<br />
                    {LOCATIONS[0].city}, {LOCATIONS[0].state} {LOCATIONS[0].zip}
                  </address>
                </div>
              </div>
            </div>
          </div>

          <div class="bg-ink-950 text-white rounded-sm p-8 border-l-4 border-ochre-600 shadow-2xl">
            <h3 class="font-main-header uppercase tracking-wide text-xl mb-6 text-white">Explore MH Aviation</h3>
            <ul class="space-y-4 text-ink-200">
              <li>
                <a href="/programs" class="hover:text-ochre-500 flex items-center transition-colors">
                  <svg class="w-4 h-4 mr-3 text-ochre-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                  Flight Training Programs
                </a>
              </li>
              <li>
                <a href="/services" class="hover:text-ochre-500 flex items-center transition-colors">
                  <svg class="w-4 h-4 mr-3 text-ochre-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                  Maintenance & FBO Services
                </a>
              </li>
              <li>
                <a href="/financing" class="hover:text-ochre-500 flex items-center transition-colors">
                  <svg class="w-4 h-4 mr-3 text-ochre-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                  Financing Options
                </a>
              </li>
              <li>
                <a href="/faqs" class="hover:text-ochre-500 flex items-center transition-colors">
                  <svg class="w-4 h-4 mr-3 text-ochre-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                  Frequently Asked Questions
                </a>
              </li>
            </ul>
          </div>
        </div>

      </div>
    </div>
  </section>

  <section class="py-16 bg-ink-50">
    <div class="max-w-7xl mx-auto px-5 md:px-8 lg:px-12 text-center">
      <h2 class="text-3xl !font-main-header text-ink-950 uppercase tracking-wide mb-4">
        Prefer to Talk Directly?
      </h2>
      <p class="text-lg text-ink-600 mb-8 max-w-2xl mx-auto">
        Our team is standing by to answer your questions and help you get started.
      </p>
      <a
        href={`tel:${PHONE_NUMBER}`}
        class="inline-flex items-center justify-center bg-ochre-600 text-white px-8 py-4 rounded-sm font-bold uppercase tracking-widest text-sm hover:bg-ochre-700 transition-colors shadow-lg hover:shadow-xl"
      >
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        Call {PHONE_NUMBER}
      </a>
    </div>
  </section>
  <MaintenancePhilosophy/>
  <FinalCTASection data={finalCtaData} />
</BaseLayout>

<script define:vars={{ CONTACT_FORM_WEBHOOK_URL, PORTAL_API_KEY, CP_ACCOUNT_RANDOM_ID }}>
  // Elements
  const form = document.getElementById("contactForm");
  const successMessage = document.getElementById("successMessage");
  const errorMessage = document.getElementById("errorMessage");
  const errorText = document.getElementById("errorText");
  const buttonText = document.getElementById("buttonText");
  const buttonSpinner = document.getElementById("buttonSpinner");
  const submitButton = form?.querySelector('button[type="submit"]');

  // Terms Toggle Elements
  const toggle = document.getElementById("terms-toggle");
  const thumb = document.getElementById("terms-thumb");
  const hiddenInput = document.getElementById("agree-terms");
  let isChecked = false;

  const SUBMIT_COOLDOWN = 30 * 1000; // 30 seconds

  // Handle Terms Toggle
  if (toggle && thumb && hiddenInput && submitButton) {
    toggle.addEventListener("click", () => {
      isChecked = !isChecked;
      hiddenInput.value = isChecked ? "yes" : "no";
      toggle.setAttribute("aria-checked", isChecked.toString());
      
      // Update styling
      if (isChecked) {
        toggle.classList.remove("bg-ink-200");
        toggle.classList.add("bg-ochre-600");
        thumb.classList.remove("translate-x-0");
        thumb.classList.add("translate-x-5"); // Adjusted for slightly wider toggle
        
        // Enable Submit Button
        submitButton.disabled = false;
        submitButton.classList.remove("bg-ink-300", "cursor-not-allowed");
        submitButton.classList.add("bg-ochre-600", "hover:bg-ochre-700", "cursor-pointer");
      } else {
        toggle.classList.add("bg-ink-200");
        toggle.classList.remove("bg-ochre-600");
        thumb.classList.add("translate-x-0");
        thumb.classList.remove("translate-x-5");
        
        // Disable Submit Button
        submitButton.disabled = true;
        submitButton.classList.add("bg-ink-300", "cursor-not-allowed");
        submitButton.classList.remove("bg-ochre-600", "hover:bg-ochre-700", "cursor-pointer");
      }
    });
  }

  if (!form) {
    console.error("Form element not found.");
  } else {
    form.addEventListener("submit", async (event) => {
      event.preventDefault();

      // Ensure terms are agreed to
      if (!isChecked) {
        alert("Please agree to the Terms of Service to proceed.");
        return;
      }

      // Hide previous messages
      successMessage?.classList.add("hidden");
      errorMessage?.classList.add("hidden");

      // Honeypot check
      const formData = new FormData(form);
      if (formData.get("website")?.trim()) {
         console.log("Bot detected");
         return;
      }

      // Remove website field from data payload
      formData.delete("website");

      // Cooldown check
      const lastSubmit = parseInt(localStorage.getItem("lastSubmit") || "0", 10);
      const now = Date.now();
      if (now - lastSubmit < SUBMIT_COOLDOWN) {
        alert("Please wait a few seconds before submitting again.");
        return;
      }
      localStorage.setItem("lastSubmit", now.toString());

      // Show loading state
      if (submitButton) {
        submitButton.disabled = true;
        submitButton.classList.add("opacity-75", "cursor-wait");
      }
      if (buttonText) buttonText.textContent = "Sending...";
      buttonSpinner?.classList.remove("hidden");

      // Logic to split Full Name for Portal API
      const fullName = formData.get("name")?.toString() || "";
      const nameParts = fullName.split(" ");
      const firstName = nameParts[0] || "";
      const lastName = nameParts.slice(1).join(" ") || "";

      try {
        const [ghlRes, portalRes] = await Promise.all([
          // 1. GHL Webhook
          fetch(CONTACT_FORM_WEBHOOK_URL, {
            method: "POST",
            headers: { "Content-Type": "application/x-www-form-urlencoded" },
            body: new URLSearchParams(formData).toString(),
          }),
          // 2. Portal API
          fetch("https://portal.rightruddermarketing.com/api/leads", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
              Accept: "application/json",
              "x-api-key": PORTAL_API_KEY,
            },
            body: JSON.stringify({
              first_name: firstName,
              last_name: lastName,
              email: formData.get("email")?.toString() || "",
              phone: formData.get("phone")?.toString() || "",
              campaign: "contact",
              account_random_id: CP_ACCOUNT_RANDOM_ID,
            }),
          }),
        ]);

        if (ghlRes.ok && portalRes.ok) {
           // Redirect to confirmation page
           window.location.href = "/contact-confirmation";
        } else {
           throw new Error("One or both requests failed");
        }
      } catch (err) {
        console.error("Submission error:", err);
        errorMessage?.classList.remove("hidden");
        if (errorText) {
             errorText.textContent = "Something went wrong. Please try again or call us directly.";
        }
        errorMessage?.scrollIntoView({ behavior: "smooth", block: "nearest" });
      } finally {
        if (isChecked && submitButton) {
            submitButton.disabled = false;
            submitButton.classList.remove("opacity-75", "cursor-wait");
        }
        if (buttonText) buttonText.textContent = "Send Message";
        buttonSpinner?.classList.add("hidden");
      }
    });
  }
</script>