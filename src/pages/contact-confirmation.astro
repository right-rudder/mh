---
import BaseLayout from "../layouts/BaseLayout.astro";
import { CITY_AND_STATE, COMPANY_NAME, PHONE_NUMBER } from "../data/consts";

const metaProps = {
  siteTitle: `Contact Confirmation | Thank You for Contacting ${COMPANY_NAME}`,
  siteDescription: `Thank you for reaching out to ${COMPANY_NAME} in ${CITY_AND_STATE}. We have received your message and a team member will get back to you shortly regarding your aviation needs.`,
  siteKeywords: `contact confirmation, message sent, ${COMPANY_NAME}`
};
---

<BaseLayout {...metaProps}>
  <section class="min-h-[90vh] flex items-center justify-center bg-ink-50 px-4 pt-[20vh] sm:pt-[13vh] pb-12">
    <div class="max-w-2xl mx-auto">
      <div class="bg-ink-50 p-8 md:p-16 rounded-sm shadow-2xl border-t-4 border-ochre-600 text-center relative overflow-hidden">
        
        <div class="absolute -top-10 -right-10 w-32 h-32 bg-ochre-50 rounded-full opacity-50 pointer-events-none"></div>

        <div class="text-ochre-600 mb-8 flex justify-center">
          <svg class="w-24 h-24 drop-shadow-sm" viewBox="0 0 24 24">
            <path
              fill="currentColor"
              fill-rule="evenodd"
              d="M12 21a9 9 0 1 0 0-18a9 9 0 0 0 0 18m-.232-5.36l5-6l-1.536-1.28l-4.3 5.159l-2.225-2.226l-1.414 1.414l3 3l.774.774z"
              clip-rule="evenodd">
            </path>
          </svg>
        </div>

        <span class="text-ochre-600 font-bold uppercase tracking-widest text-sm mb-3 block">
          Message Sent
        </span>
        
        <h1 class="text-4xl md:text-5xl !font-main-header uppercase tracking-wide text-ink-950 mb-6">
          Thank You For<br>Reaching Out
        </h1>

        <p class="text-lg text-ink-600 mb-10 leading-relaxed max-w-lg mx-auto">
          We have received your message. At <strong class="text-ochre-600">{COMPANY_NAME}</strong>, we value responsive communication. A member of our team will review your inquiry and contact you within 
          <span class="text-ink-950 font-bold underline decoration-ochre-500 decoration-2">24 hours</span>.
        </p>

        <div class="flex flex-col items-center gap-4 w-full max-w-md mx-auto">
          <a
            href="/"
            class="btn-primary"
          >
            Return Home
          </a>
          
          <div class="grid grid-cols-2 gap-4">
            <a
              href="/fleet/"
              class="flex px-4 items-center justify-center text-xs font-bold uppercase tracking-widest text-ink-950 border border-ink-200 py-3 rounded-sm hover:bg-ink-950 hover:text-ink-50 transition-all duration-300 hover:cursor-pointer"
            >
              Meet Our Fleet
            </a>
            <a
              href="/about-us/"
              class="flex px-4 items-center justify-center text-xs font-bold uppercase tracking-widest text-ink-950 border border-ink-200 py-3 rounded-sm hover:bg-ink-950 hover:text-ink-50 transition-all duration-300 hover:cursor-pointer"
            >
              More About Us
            </a>
          </div>
        </div>

        <p class="mt-12 text-sm text-ink-400">
          Need immediate assistance? Call us at <a href={`tel:${PHONE_NUMBER}`} class="text-ochre-600 font-bold hover:underline">{PHONE_NUMBER}</a>
        </p>
      </div>
    </div>
  </section>
</BaseLayout>