---
import ImageComp from "../ImageComp.astro";

interface Props {
  data: {
    title: string;
    upperheader?: string;
    mainImage?: string;
    mainImageAlt?: string;
    descriptionParagraphs: string[];
    listItems?: string[];
  };
}

const { data } = Astro.props;
---

<section class="py-16 md:py-24 bg-ink-950 text-ink-50 reveal-section opacity-0 translate-y-8 transition-all duration-1000 ease-out">
  <div class="max-w-7xl mx-auto px-5 md:px-8 lg:px-12">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      
      <div class="order-2 lg:order-1">
        {data.upperheader && (
          <span class="subtitle">
            {data.upperheader}
          </span>
        )}
        <h2 class="title">
          {data.title}
        </h2>
        
        <div class="space-y-6 text-ink-50 text-lg leading-relaxed mb-8">
          {data.descriptionParagraphs.map((p) => (
            <p>{p}</p>
          ))}
        </div>

        {data.listItems && (
          <ul class="space-y-4">
            {data.listItems.map((item) => (
              <li class="group hover:-translate-y-2 transition-transform easy-out duration-300 flex items-center gap-4 bg-ink-900/50 p-4 rounded-sm border-l-2 border-ochre-600">
                <span class="text-ink-50 group-hover:text-ochre-600 font-medium">{item}</span>
              </li>
            ))}
          </ul>
        )}
        <div class="w-full mt-4 sm:mt-8">
          <a href="/enroll" class="btn-primary">
            Start Today
          </a>
        </div>
      </div>
      <div class="order-1 lg:order-2 h-full min-h-[400px] relative rounded-sm overflow-hidden shadow-2xl">
        <ImageComp
          src={data.mainImage || "/src/assets/instructing/mh-aviation-instructing-student-how-to-repair-at-lancaster-california.webp"}
          alt={data.mainImageAlt || "Training Environment"}
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-ink-950/60 to-transparent"></div>
      </div>
    </div>
  </div>
</section>