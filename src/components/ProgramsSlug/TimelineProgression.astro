---
/* src/components/ProgramSlug/TimelineProgression.astro */
import { FaCheck, FaAward, FaCalendarCheck } from "react-icons/fa";

interface Props {
  data: {
    title?: string;
    upperheader?: string;
    descriptionParagraphs?: string[];
    phases?: {
      phaseTitle: string;
      phaseBulletPoints: string[];
    }[];
    outcome?: string;
  };
}

const { data } = Astro.props;
---

<section class="py-24 bg-ink-950 text-white overflow-hidden relative" id="timeline-section">
  
  <div class="absolute top-0 inset-x-0 h-px bg-gradient-to-r from-transparent via-ink-800 to-transparent"></div>

  <div class="max-w-6xl mx-auto px-5 md:px-8 relative z-10">
    
    <div class="text-center mb-20 reveal-header opacity-0 translate-y-8 transition-all duration-1000 ease-out">
      {data.upperheader && (
        <span class="text-ochre-600 font-bold uppercase tracking-widest text-sm mb-3 block">
          {data.upperheader}
        </span>
      )}
      <h2 class="text-3xl md:text-5xl !font-main-header text-white uppercase tracking-wide leading-tight">
        {data.title || "Training Progression"}
      </h2>
      <div class="mt-6 text-ink-300 text-lg max-w-3xl mx-auto leading-relaxed">
        {data.descriptionParagraphs?.map(p => <p class="mb-2">{p}</p>)}
      </div>
    </div>

    <div class="relative">
      
      <div class="absolute left-4 md:left-1/2 top-0 bottom-0 w-0.5 bg-ink-800 transform md:-translate-x-1/2 rounded-full"></div>
      
      <div id="progress-line" class="absolute left-4 md:left-1/2 top-0 w-0.5 bg-gradient-to-b from-ochre-500 to-ochre-600 transform md:-translate-x-1/2 shadow-[0_0_15px_rgba(217,119,6,0.6)] rounded-full transition-all duration-700 ease-out h-0"></div>

      <div class="space-y-16 md:space-y-24 pb-12">
        {data.phases?.map((phase, index) => (
          <div class={`timeline-item relative flex flex-col md:flex-row gap-8 items-center ${index % 2 === 0 ? 'md:flex-row-reverse' : ''}`}>
            
            <div class="absolute left-4 md:left-1/2 top-0 md:top-6 w-8 h-8 md:w-10 md:h-10 bg-ink-950 border-2 border-ink-700 rounded-full z-20 transform -translate-x-1/2 flex items-center justify-center transition-all duration-500 timeline-dot shadow-xl">
                <span class="text-ink-500 text-[10px] md:text-xs font-bold transition-colors duration-300">{index + 1}</span>
            </div>


            <div class={`w-full md:w-1/2 pl-12 md:pl-0 ${index % 2 === 0 ? 'md:pr-16' : 'md:pl-16'}`}>
              <div class={`bg-ink-900/80 backdrop-blur-sm p-8 rounded-sm border-l-4 border-ink-800 hover:border-ochre-600 transition-all duration-500 transform opacity-0 timeline-card ${index % 2 === 0 ? '-translate-x-12' : 'translate-x-12'}`}>
                <h4 class="text-2xl !font-main-header text-white mb-6 tracking-wide">{phase.phaseTitle}</h4>
                <ul class="space-y-3">
                  {phase.phaseBulletPoints.map(point => (
                    <li class="text-sm text-ink-200 flex items-start gap-3 group">
                      <div  class="text-ochre-600 mt-1 flex-shrink-0 opacity-70 group-hover:opacity-100 transition-opacity" >
                      <FaCheck/>
                      </div>
                      <span class="leading-snug">{point}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>

            <div class="md:w-1/2 hidden md:block"></div>
          </div>
        ))}
      </div>

      {data.outcome && (
        <div class="mt-20 text-center relative z-20 opacity-0 translate-y-8 transition-all duration-700 delay-300" id="outcome-badge">
          <div class="inline-flex flex-col items-center justify-center relative">
            <div class="absolute -top-20 h-20 w-0.5 bg-gradient-to-b from-ink-800 to-transparent"></div>
            
            <div class="bg-gradient-to-r from-ochre-600 to-ochre-700 text-white px-10 py-5 rounded-sm shadow-2xl border border-ochre-400/30 glow-effect flex items-center gap-4">
              <FaAward className="text-3xl text-ochre-200" />
              <span class="font-bold uppercase tracking-[0.2em] text-lg">{data.outcome}</span>
            </div>
          </div>
        </div>
      )}

    </div>
  </div>
</section>

<style>
  .glow-effect {
    box-shadow: 0 0 30px -5px rgba(217, 119, 6, 0.3);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // 1. Initial Header Reveal
    const header = document.querySelector('.reveal-header');
    if (header) {
      setTimeout(() => {
        header.classList.remove('opacity-0', 'translate-y-8');
      }, 200);
    }

    // 2. Timeline Interaction
    const progressLine = document.getElementById('progress-line');
    const timelineItems = document.querySelectorAll('.timeline-item');
    const outcomeBadge = document.getElementById('outcome-badge');
    const timelineSection = document.getElementById('timeline-section');

    const observerOptions = {
      root: null,
      rootMargin: '-20% 0px -20% 0px',
      threshold: 0.1
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const target = entry.target as HTMLElement;
          activateItem(target);
        }
      });
    }, observerOptions);

    timelineItems.forEach(item => observer.observe(item));

    // Handle Outcome Badge Reveal
    const outcomeObserver = new IntersectionObserver((entries) => {
      if(entries[0].isIntersecting) {
        outcomeBadge?.classList.remove('opacity-0', 'translate-y-8');
        if(progressLine) progressLine.style.height = '100%'; 
      }
    }, { threshold: 0.5 });

    if(outcomeBadge) outcomeObserver.observe(outcomeBadge);


    // Helper: Activate a timeline step
    function activateItem(item: HTMLElement) {
      // 1. Animate Card Slide-in
      const card = item.querySelector('.timeline-card');
      if (card) {
        card.classList.remove('opacity-0', '-translate-x-12', 'translate-x-12');
        card.classList.add('border-ochre-600');
      }

      // 2. Animate Connector Line (Desktop)
      const connector = item.querySelector('.timeline-connector');
      if (connector) {
        connector.classList.remove('scale-x-0');
      }

      // 3. Highlight Dot
      const dot = item.querySelector('.timeline-dot');
      const dotText = dot?.querySelector('span');
      
      if (dot) {
        dot.classList.remove('border-ink-700', 'bg-ink-950');
        dot.classList.add('border-ochre-500', 'bg-white');
      }
      if (dotText) {
        dotText.classList.remove('text-ink-500');
        dotText.classList.add('text-ink-950');
      }

      // 4. Update Progress Line Height
      if (progressLine) {
        const wrapperRect = document.querySelector('#timeline-section .relative')?.getBoundingClientRect();
        const dotRect = dot?.getBoundingClientRect();
        
        if (wrapperRect && dotRect) {
          const relativeTop = dotRect.top - wrapperRect.top + (dotRect.height / 2);
          progressLine.style.height = `${relativeTop}px`;
        }
      }
    }
  });
</script>