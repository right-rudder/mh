---
import ImageComp from "../ImageComp.astro";
import { FaCheckCircle } from "react-icons/fa";

interface Props {
  data: {
    mainImage?: string;
    title?: string;
    upperheader?: string;
    descriptionParagraphs?: string[];
    bulletPointLists?: {
      title: string;
      items: string[];
    }[];
  };
}

const { data } = Astro.props;
---

<section class="py-16 md:py-24 bg-ink-50 reveal-section opacity-0 translate-y-8 transition-all duration-1000 ease-out">
  <div class="max-w-7xl mx-auto px-5 md:px-8 lg:px-12">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
      
      <div class="h-full min-h-[500px] relative rounded-sm overflow-hidden shadow-xl order-last lg:order-first">
        <ImageComp
          src={data.mainImage || "/src/assets/instructing/instructing-student-how-to-repair-at-california-mh-aviation-california-commercial-pilot.webp"}
          alt="What is included"
          class="w-full h-full object-cover"
        />
      </div>

      <div class="flex flex-col justify-center">
        {data.upperheader && (
          <span class="subtitle">
            {data.upperheader}
          </span>
        )}
        
        <h2 class="title-black">
          {data.title || "What is Included"}
        </h2>

        <div class="prose prose-lg text-ink-950 mb-10">
          {data.descriptionParagraphs?.map(p => <p>{p}</p>)}
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
          {data.bulletPointLists?.map((list) => (
            <div>
              <h4 class="font-bold text-ink-950 uppercase tracking-wide mb-4 text-sm border-b border-ink-200 pb-2">
                {list.title}
              </h4>
              <ul class="space-y-3">
                {list.items.map((item) => (
                  <li class="flex items-start gap-3 text-sm text-ink-600">
                    <FaCheckCircle className="text-ochre-600 mt-0.5 flex-shrink-0" />
                    {item}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
        <div class="w-full flex mt-12">
          <a href="/enroll/" class="btn-primary w-full lg:w-fit">
          Enroll Now</a>
        </div>
      </div>

    </div>
  </div>
</section>