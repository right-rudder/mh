---
import type { CollectionEntry } from "astro:content";
import ImageComp from "../ImageComp.astro";
import { FaClock, FaArrowRight } from "react-icons/fa";
import { TbCoinFilled } from "react-icons/tb";

interface Props {
  program: CollectionEntry<"programs">;
  index: number;
}

const { program, index } = Astro.props;

const highlights = program.data.programIntroduction?.highlights || [];
const costFromHighlights = highlights.find(h => 
    h.highlightName.toLowerCase().includes('cost') || 
    h.highlightName.toLowerCase().includes('price') || 
    h.highlightName.toLowerCase().includes('tuition') ||
    h.highlightName.toLowerCase().includes('investment')
)?.highlightValue;

const cost = program.data.pricingRange || costFromHighlights;

// Logic to find the duration
const duration = highlights.find(h => 
    h.highlightName.toLowerCase().includes('duration') || 
    h.highlightName.toLowerCase().includes('timeline') ||
    h.highlightName.toLowerCase().includes('time')
)?.highlightValue;
---

<a 
  href={`/programs/${program.slug}`}
  class="program-card group relative flex flex-col bg-ink-50 rounded-sm shadow-lg hover:shadow-2xl hover:shadow-ink-950/20 transition-all duration-700 ease-out overflow-hidden border-x border-b border-muted-200 border-t-4 border-t-muted-200 hover:border-t-ochre-600 hover:-translate-y-2 opacity-0 translate-y-8 h-full hover:cursor-pointer"
  style={`transition-delay: ${index * 150}ms`}
>
  
  <div class="relative h-80 overflow-hidden bg-ink-950">
    <ImageComp
      src={program.data.image || "/src/assets/instructing/mh-aviation-instructing-student-how-to-repair-at-lancaster-california.webp"}
      alt={program.data.alt || program.data.title || "MH Aviation Training"}
      class="w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-105 opacity-90 group-hover:opacity-100"
    />
    
    <div class="absolute inset-0 bg-gradient-to-t from-ink-950/90 via-ink-950/20 to-transparent opacity-90 transition-opacity duration-500"></div>

    <div class="absolute bottom-6 left-6 right-6 flex flex-wrap gap-4 justify-between items-end">
      {cost && (
        <div class="flex items-center gap-2 bg-ink-50 px-4 py-2 rounded-sm shadow-xl border-l-4 border-ochre-600 text-xs font-bold uppercase tracking-widest text-ink-950">
            <TbCoinFilled className="text-ochre-600  text-lg" />
            <span>{cost}</span>
        </div>
      )}
      {duration && (
        <div class="flex items-center gap-2 bg-ink-900/80 backdrop-blur-md text-ink-50 text-xs font-bold px-4 py-2 rounded-sm uppercase tracking-widest border border-ink-50/10">
          <FaClock className="text-ochre-500" />
          {duration}
        </div>
      )}
    </div>
  </div>

  <div class="p-8 md:p-10 flex flex-col flex-1">
    <div class="mb-6">
        <h3 class="text-3xl !font-main-header tracking-wide text-ink-950 group-hover:text-ochre-600 transition-colors duration-300 leading-none mb-2">
        {program.data.title}
        </h3>
        <div class="h-1 w-12 bg-ochre-600 rounded-full transition-all duration-500 group-hover:w-24"></div>
    </div>

    <p class="text-ink-600 text-lg leading-relaxed mb-10 flex-1 line-clamp-3">
      {program.data.description}
    </p>

    <div 
      class="relative w-full inline-flex items-center justify-center gap-3 px-8 py-5 font-bold text-sm tracking-widest uppercase text-ink-50 bg-ink-950 rounded-sm overflow-hidden transition-all duration-300 group-hover:bg-ochre-600 group-hover:text-ink-50 mt-auto shadow-lg shadow-ink-950/10"
    >
      <span class="relative z-10">Explore Curriculum</span>
      <FaArrowRight className="relative z-10 text-ochre-600 group-hover:text-ink-50 transition-transform duration-300 group-hover:translate-x-1" />
    </div>
  </div>

</a>