---
import ImageComp from "../ImageComp.astro";
import { FaArrowRight } from "react-icons/fa";

interface Props {
  data: {
    upperheader: string;
    title: string;
    description: string[];
    image: { src: string; alt: string };
    cta: { text: string; href: string };
  };
}

const { data } = Astro.props;
---

<section class="py-24 bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto px-5 md:px-8 lg:px-12">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      
      <div class="order-2 lg:order-1">
        <span class="text-ochre-600 font-bold uppercase tracking-widest text-sm mb-4 block">
          {data.upperheader}
        </span>
        <h2 class="text-3xl md:text-5xl !font-main-header text-ink-950 uppercase tracking-wide mb-8">
          {data.title}
        </h2>
        
        <div class="space-y-6 text-lg text-ink-600 leading-relaxed mb-10">
          {data.description.map(p => <p set:html={p} />)}
        </div>

        <a href={data.cta.href} class="btn-primary inline-flex items-center gap-2 hover:cursor-pointer shadow-lg">
          {data.cta.text} <FaArrowRight />
        </a>
      </div>

      <div class="order-1 lg:order-2 relative h-[500px] w-full rounded-sm overflow-hidden shadow-2xl group">
        <ImageComp 
          src={data.image.src} 
          alt={data.image.alt} 
          class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" 
        />
        <div class="absolute inset-0 bg-gradient-to-tr from-ink-950/20 to-transparent pointer-events-none"></div>
      </div>

    </div>
  </div>
</section>