---
/* src/components/Financing/CostBreakdown.astro */
import ImageComp from "../ImageComp.astro";
import { FaPlane, FaTools, FaCalendarCheck } from "react-icons/fa";

interface Props {
  data: {
    upperheader: string;
    title: string;
    description: string;
    image: { src: string; alt: string };
    points: { title: string; text: string }[];
    cta: { text: string; href: string };
  };
}

const { data } = Astro.props;

const icons = [FaPlane, FaTools, FaCalendarCheck];
---

<section class="py-24 bg-ink-50">
  <div class="max-w-7xl mx-auto px-5 md:px-8 lg:px-12">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-16">
      
      <div class="lg:col-span-5 flex flex-col justify-center">
        <span class="text-ochre-600 font-bold uppercase tracking-widest text-sm block">
          {data.upperheader}
        </span>
        <h2 class="text-3xl md:text-4xl !font-main-header text-ink-950 uppercase tracking-wide mb-6" set:html={data.title}></h2>
        <p class="text-ink-600 text-lg leading-relaxed mb-10">
          {data.description}
        </p>

        <div class="space-y-6 mb-10">
            {data.points.map((point, index) => {
                const Icon = icons[index % icons.length];
                return (
                    <div class="flex gap-4 group cursor-default">
                        <div class="w-12 h-12 bg-white rounded-sm shadow-sm flex items-center justify-center text-ochre-600 text-xl border border-ink-100 flex-shrink-0 transition-all duration-300 group-hover:bg-ochre-600 group-hover:text-white group-hover:border-ochre-600">
                            <Icon />
                        </div>
                        <div>
                            <h4 class="font-bold text-ink-950 uppercase tracking-wide text-sm transition-colors duration-300 group-hover:text-ochre-600">{point.title}</h4>
                            <p class="text-ink-600 text-sm">{point.text}</p>
                        </div>
                    </div>
                )
            })}
        </div>

        <div>
            <a href={data.cta.href} class="btn-primary hover:cursor-pointer shadow-lg">{data.cta.text}</a>
        </div>
      </div>

      <div class="lg:col-span-7 relative">
        <div class="relative h-full min-h-[500px] rounded-sm overflow-hidden shadow-2xl group">
            <ImageComp src={data.image.src} alt={data.image.alt} class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" />
            
            <div class="absolute bottom-0 left-0 bg-ink-950/90 backdrop-blur-md p-8 text-white max-w-sm border-t-4 border-ochre-600">
                <p class="font-bold text-2xl mb-1">$155<span class="text-sm font-normal text-ink-300">/hr (approx)</span></p>
                <p class="text-xs uppercase tracking-widest text-ochre-400">Competitive Aircraft Rate</p>
            </div>
        </div>
      </div>

    </div>
  </div>
</section>