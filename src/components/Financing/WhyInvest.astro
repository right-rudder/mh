---
import ImageComp from "../ImageComp.astro";

interface Props {
  data: {
    upperheader: string;
    title: string;
    description: string;
    image: { src: string; alt: string };
    cta: { text: string; href: string };
  };
}

const { data } = Astro.props;
---

<section class="py-24 bg-ink-950 relative overflow-hidden">
  <div class="max-w-7xl mx-auto px-5 md:px-8 lg:px-12">
    <div class="bg-ink-900 rounded-sm overflow-hidden shadow-2xl flex flex-col md:flex-row">
      
      <div class="md:w-1/2 relative min-h-[400px]">
        <ImageComp src={data.image.src} alt={data.image.alt} class="w-full h-full object-cover absolute inset-0 opacity-90" />
        <div class="absolute inset-0 bg-ochre-600/20 mix-blend-multiply"></div>
      </div>

      <div class="md:w-1/2 p-10 md:p-16 flex flex-col justify-center text-white">
        <span class="text-ochre-500 font-bold uppercase tracking-widest text-sm block">
            {data.upperheader}
        </span>
        <h2 class="text-3xl md:text-4xl !font-main-header uppercase tracking-wide mb-6" set:html={data.title}>
        </h2>
        <p class="text-ink-200 text-lg leading-relaxed mb-10">
            {data.description}
        </p>
        <div>
            <a href={data.cta.href} class="inline-block bg-white text-ink-950 font-bold uppercase tracking-widest text-sm px-8 py-4 rounded-sm hover:bg-ochre-600 hover:text-white transition-all cursor-pointer shadow-lg">
                {data.cta.text}
            </a>
        </div>
      </div>

    </div>
  </div>
</section>