---
import ImageWithGradientAndText from "./ImageWithGradientAndText.astro";

interface Props {
  data: {
    eyebrow: string;
    headline: string;
    bodyCopy: string;
    image: {
      src: string;
      alt: string;
    };
  };
}

const { data } = Astro.props;
---

<section class="py-16 md:py-24 bg-ink-950">
  <div class="max-w-7xl mx-auto px-5 md:px-8 lg:px-12">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <div class="h-80 md:h-full min-h-[400px]">
        <ImageWithGradientAndText
          src={data.image.src}
          alt={data.image.alt}
          class="w-full h-full object-cover object-center rounded-sm shadow-xl"
        />
      </div>
      <div>
        <p
          class="text-ochre-600 font-bold uppercase tracking-widest text-sm mb-4"
        >
          {data.eyebrow}
        </p>
        <h2 class="title text-ink-50 mb-6">
          {data.headline}
        </h2>
        <p class="font-sans text-ink-50" set:html={data.bodyCopy}>
        </p>
      </div>
    </div>
  </div>
</section>