---
import ImageWithGradientAndText from "../ImageWithGradientAndText.astro";
import { FaArrowRight } from "react-icons/fa";

interface Props {
  pricingRange?: string;
  data: {
    upperheader: string;
    title: string;
    mainParagraphs: string[];
    image: string;
    alt: string;
    stats?: {
      value: string;
      label: string;
    }[];
  };
}

const { data, pricingRange } = Astro.props;
---

<section class="py-20 md:py-24 bg-ink-50">
  <div class="max-w-7xl mx-auto px-5 md:px-8 lg:px-12">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      
      <div class="reveal-content opacity-0 translate-y-8 transition-all duration-1000 ease-out">
        <span class="subtitle">
          {data.upperheader}
        </span>
        <h2 class="title-black">
          {data.title}
        </h2>
        
        <div class="prose prose-lg text-ink-950 mb-10 space-y-4">
          {data.mainParagraphs.map((p) => (
            <p set:html={p} />
          ))}
        </div>

        {data.stats && (
          <div class="grid grid-cols-2 gap-6 pt-6 border-t border-ink-200 mb-10">
            {data.stats.map((stat) => (
              <div>
                <span class="block text-3xl font-bold text-ochre-600 !font-main-header">{stat.value}</span>
                <span class="block text-sm text-ink-500 uppercase tracking-wider font-medium">{stat.label}</span>
              </div>
            ))}
          </div>
        )}

        <a href="/contact/" class="btn-primary">
         Book Service
        </a>
      </div>

      <div class="relative h-[500px] w-full rounded-sm overflow-hidden shadow-2xl reveal-image opacity-0 translate-x-8 transition-all duration-1000 ease-out group">
        
        {pricingRange && (
          <div class="absolute top-6 right-6 z-20 bg-ink-50 border-l-4 border-ochre-600 py-3 px-6 shadow-xl rounded-sm">
             <span class="block text-[10px] text-ochre-600 font-black uppercase tracking-widest mb-1">Rate / Fee</span>
             <span class="block text-ink-950 font-bold text-lg leading-none">{pricingRange}</span>
          </div>
        )}

        <ImageWithGradientAndText
          src={data.image || "/src/assets/instructing/instructing-student-how-to-repair-at-california-mh-aviation-california-commercial-pilot.webp"}
          alt={data.alt || "MH Aviation Maintenance Hangar"}
          class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-ink-950/60 to-transparent pointer-events-none"></div>
      </div>

    </div>
  </div>
</section>

<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.remove('opacity-0', 'translate-y-8', 'translate-x-8');
        observer.unobserve(entry.target);
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('.reveal-content, .reveal-image').forEach((el) => observer.observe(el));
</script>