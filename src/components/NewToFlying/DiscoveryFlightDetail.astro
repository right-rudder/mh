---
import ImageComp from "../ImageComp.astro";

interface Props {
  data: {
    upperheader: string;
    title: string;
    description: string;
    cta: { text: string; href: string };
    image: { src: string; alt: string };
  };
}

const { data } = Astro.props;
---

<section class="py-24 bg-ink-950 text-ink-50 relative overflow-hidden reveal-section opacity-0 translate-y-8 transition-all duration-1000 ease-out">
    <div class="absolute top-0 right-0 w-1/2 h-full bg-ink-950 to-transparent opacity-50"></div>

    <div class="max-w-5xl mx-auto px-5 relative z-10">
        <div class="flex flex-col md:flex-row items-center gap-10 bg-ink-900/50 border border-ink-800 p-8 md:p-12 rounded-sm backdrop-blur-sm">
            
            <div class="w-32 h-32 md:w-48 md:h-48 flex-shrink-0 rounded-full overflow-hidden border-4 border-ochre-600 shadow-lg">
                <ImageComp src={data.image.src} alt={data.image.alt} class="w-full h-full object-cover" />
            </div>

            <div class="flex-1 text-center md:text-left">
                <span class="text-ochre-500 font-bold uppercase tracking-widest text-xs mb-2 block">{data.upperheader}</span>
                <h2 class="text-2xl md:text-4xl !font-main-header uppercase tracking-wide mb-4">{data.title}</h2>
                <p class="text-ink-300 mb-6">{data.description}</p>
                <a href={data.cta.href} class="inline-block bg-white text-ink-950 hover:bg-ochre-600 hover:text-white font-bold uppercase tracking-widest text-sm px-8 py-3 rounded-sm transition-colors cursor-pointer">
                    {data.cta.text}
                </a>
            </div>

        </div>
    </div>
</section>