---
import ImageComp from "../ImageComp.astro";
import { FaCheck } from "react-icons/fa";

interface Props {
  data: {
    upperheader: string;
    title: string;
    description: string;
    features: string[];
    cta: { text: string; href: string };
    image: { src: string; alt: string };
  };
}

const { data } = Astro.props;
---

<section class="py-24 bg-ink-950 text-ink-50 reveal-section opacity-0 translate-y-8 transition-all duration-1000 ease-out">
  <div class="max-w-7xl mx-auto px-5 md:px-8 lg:px-12">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 items-center">
      
      <div class="lg:col-span-5">
        <span class="text-ochre-500 font-bold uppercase tracking-widest text-sm mb-3 block">{data.upperheader}</span>
        <h2 class="text-3xl md:text-4xl !font-main-header uppercase tracking-wide mb-6">{data.title}</h2>
        <p class="text-ink-200 text-lg leading-relaxed mb-8" set:html={data.description} />
        
        <ul class="space-y-4 mb-10">
          {data.features.map(feature => (
            <li class="flex items-center gap-3">
              <div class="w-6 h-6 rounded-full bg-ochre-600 flex items-center justify-center text-xs text-white">
                <FaCheck />
              </div>
              <span class="font-medium text-ink-50">{feature}</span>
            </li>
          ))}
        </ul>

        <a href={data.cta.href} class="btn-primary hover:cursor-pointer">{data.cta.text}</a>
      </div>

      <div class="lg:col-span-7 relative group">
        <div class="relative rounded-sm overflow-hidden shadow-2xl border border-ink-700 h-[400px] lg:h-[500px]">
          <ImageComp src={data.image.src} alt={data.image.alt} class="w-full h-full object-cover object-center" />
          
          <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-ink-950 to-transparent p-8">
            <p class="text-ink-50 font-mono text-xs uppercase tracking-widest opacity-70">Avionics Upgrade /// Complete</p>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>