---
import ImageComp from "../ImageComp.astro";
import { FaArrowRight } from "react-icons/fa";

interface Props {
  data: {
    upperheader: string;
    title: string;
    description: string[];
    cta: { text: string; href: string };
    image: { src: string; alt: string };
  };
}

const { data } = Astro.props;
---

<section class="relative py-24 md:py-32 overflow-hidden reveal-section opacity-0 translate-y-8 transition-all duration-1000 ease-out bg-white">
  <div class="max-w-7xl mx-auto px-5 md:px-8 lg:px-12 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <div class="relative z-10">
        <span class="subtitle">
          {data.upperheader}
        </span>
        <h2 class="title-black" set:html={data.title} />
        
        <div class="space-y-6 text-xl text-ink-950 leading-relaxed mb-10 border-l-4 border-ochre-600 pl-6">
          {data.description.map(p => <p>{p}</p>)}
        </div>

        <a href={data.cta.href} class="group inline-flex items-center gap-3 px-8 py-4 bg-ink-950 text-ink-50 font-bold uppercase tracking-widest text-sm rounded-sm hover:bg-ochre-600 transition-all duration-300 shadow-xl hover:cursor-pointer">
          {data.cta.text}
          <FaArrowRight className="group-hover:translate-x-1 transition-transform" />
        </a>
      </div>

      <div class="relative h-[600px] w-full">
        <div class="absolute -top-10 -right-10 w-full h-full border-2 border-ochre-100 rounded-sm z-0"></div>
        <div class="absolute inset-0 rounded-sm overflow-hidden shadow-2xl z-10">
          <ImageComp 
            src={data.image.src} 
            alt={data.image.alt} 
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-700" 
          />
        </div>
      </div>

    </div>
  </div>
</section>