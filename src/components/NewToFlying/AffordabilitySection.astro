---
import ImageComp from "../ImageComp.astro";

interface Props {
  data: {
    upperheader: string;
    title: string;
    description: string;
    cta: { text: string; href: string };
    image: { src: string; alt: string };
  };
}

const { data } = Astro.props;
---

<section class="relative py-24 bg-ink-50 overflow-hidden reveal-section opacity-0 translate-y-8 transition-all duration-1000 ease-out">
  
  <div class="max-w-7xl mx-auto px-5 md:px-8 lg:px-12 relative z-10">
    <div class="bg-white rounded-sm shadow-2xl overflow-hidden flex flex-col lg:flex-row">
      
      <div class="lg:w-5/12 relative min-h-[300px]">
        <ImageComp src={data.image.src} alt={data.image.alt} class="w-full h-full object-cover absolute inset-0" />
        <div class="absolute inset-0 bg-ochre-900/20 mix-blend-multiply"></div>
      </div>

      <div class="lg:w-7/12 p-10 lg:p-16 flex flex-col justify-center">
        <span class="text-ochre-600 font-bold uppercase tracking-widest text-sm mb-3 block">{data.upperheader}</span>
        <h2 class="text-3xl md:text-4xl !font-main-header text-ink-950 uppercase tracking-wide mb-6">{data.title}</h2>
        <p class="text-ink-600 text-lg leading-relaxed mb-8" set:html={data.description} />
        
        <div>
            <a href={data.cta.href} class="btn-primary hover:cursor-pointer">{data.cta.text}</a>
        </div>
      </div>

    </div>
  </div>
</section>