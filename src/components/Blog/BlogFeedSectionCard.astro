---
import { formatDate } from "./utils";
import type { CollectionEntry } from "astro:content";
import ImageComp from "../ImageComp.astro";
import { FaArrowRight, FaCalendarAlt } from "react-icons/fa";

interface Props {
  blogEntry: CollectionEntry<"blog">;
  index?: number;
  class?: string; 
}

const { blogEntry, index = 0, class: className = "" } = Astro.props;
const isFeatured = index === 0;
---

<a
  href={`/blog/${blogEntry.slug}`}
  class={`hover:cursor-pointer group flex flex-col ${isFeatured ? "lg:flex-row" : ""} bg-ink-900 overflow-hidden border-t-4 border-muted-700 hover:border-ochre-600 transition-all duration-500 ease-out hover:-translate-y-1 shadow-lg hover:shadow-2xl hover:shadow-ink-950/50 opacity-0 translate-y-8 blog-card ${className}`}
  style={`transition-delay: ${index * 150}ms;`}
  data-astro-prefetch
>
  <div class={`relative overflow-hidden shrink-0 w-full ${isFeatured ? "lg:w-1/2 min-h-[400px] lg:aspect-auto aspect-[16/9]" : "aspect-[16/9] min-h-[240px]"}`}>
    <ImageComp
      class="absolute inset-0 size-full object-cover transition-transform duration-700 group-hover:scale-110 opacity-90 group-hover:opacity-100"
      src={blogEntry.data.image}
      alt={blogEntry.data.title}
    />
    <div class="absolute inset-0 bg-gradient-to-t from-ink-950/60 to-transparent opacity-60 group-hover:opacity-40 transition-opacity duration-500"></div>
  </div>

  <div class={`p-8 flex flex-col flex-1 ${isFeatured ? "justify-center" : ""}`}>
    
    <div class="flex items-center gap-3 text-xs font-bold uppercase tracking-wider text-ochre-500 mb-3">
      <span class="flex items-center gap-1.5">
        <FaCalendarAlt />
        {formatDate(blogEntry.data.pubDate)}
      </span>
      <span class="w-1 h-1 bg-ink-700 rounded-full"></span>
      <span class="text-ink-400 truncate max-w-[150px]">
         {blogEntry.data.author}
      </span>
    </div>

    <h3 class={`font-sans font-bold text-ink-50 text-xl md:text-2xl transition-colors duration-300 group-hover:text-ochre-500 mb-4 ${isFeatured ? "md:text-3xl" : "line-clamp-2"}`}>
      {blogEntry.data.title}
    </h3>

    <p class={`text-ink-300 text-sm leading-relaxed mb-6 ${isFeatured ? "line-clamp-4 md:line-clamp-none" : "line-clamp-3"}`}>
      {blogEntry.data.description}
    </p>

    <div class="mt-auto flex items-center gap-2 text-sm font-bold uppercase tracking-widest text-ink-50 group-hover:text-ochre-500 transition-colors">
      Read Article
      <FaArrowRight class="text-ochre-600 group-hover:translate-x-1 transition-transform duration-300" />
    </div>

  </div>
</a>

<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.remove("opacity-0", "translate-y-8");
        observer.unobserve(entry.target);
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll(".blog-card").forEach((card) => {
    observer.observe(card);
  });
</script>